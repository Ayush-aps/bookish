<style>
  /* public/css/footer-styles.css */
.fixed-footer {
  background-color: #ffe619 !important;
  color: #212529 !important;
  padding: 2rem 0 0.5rem 0;
  width: 100%;
  font-family: Arial, sans-serif;
  /* Add !important to ensure these styles aren't overridden */
}

.fixed-footer .footer-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.fixed-footer .footer-section {
  flex: 1;
  min-width: 300px;
  margin-bottom: 1.5rem;
  padding: 0 1rem;
}

.fixed-footer .footer-section h3 {
  font-size: 1.2rem;
  margin-bottom: 1rem;
  font-weight: bold;
  color: #212529 !important;
}

.fixed-footer .footer-section.about p {
  line-height: 1.5;
  color: #212529 !important;
}

.fixed-footer .footer-section.links ul {
  list-style-type: none;
  padding: 0;
}

.fixed-footer .footer-section.links ul li {
  margin-bottom: 0.5rem;
}

.fixed-footer .footer-section.links ul li a {
  color: #212529 !important;
  text-decoration: none;
  transition: color 0.3s;
}

.fixed-footer .footer-section.links ul li a:hover {
  color: #a3b7f0 !important;
}

.fixed-footer .social-icons {
  display: flex;
  gap: 1rem;
}

.fixed-footer .social-icons a {
  color: #212529 !important;
  font-size: 1.2rem;
  transition: color 0.3s;
}

.fixed-footer .social-icons a:hover {
  color: #a3b7f0 !important;
}

.fixed-footer .footer-bottom {
  text-align: center;
  padding-top: 1rem;
  margin-top: 1rem;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.fixed-footer .footer-bottom p {
  color: #212529 !important;
}

.fixed-footer .footer-bottom a {
  color: #212529 !important;
  text-decoration: none;
  transition: color 0.3s;
}

.fixed-footer .footer-bottom a:hover {
  color: #a3b7f0 !important;
}

@media (max-width: 768px) {
  .fixed-footer .footer-content {
    flex-direction: column;
  }
  
  .fixed-footer .footer-section {
    margin-bottom: 2rem;
  }
}

/* This ensures dark mode doesn't affect the footer */
.dark-mode .fixed-footer {
  background-color: #ffe619 !important;
  color: #212529 !important;
}

.dark-mode .fixed-footer a,
.dark-mode .fixed-footer p,
.dark-mode .fixed-footer h3 {
  color: #212529 !important;
}

.dark-mode .fixed-footer .footer-section.links ul li a:hover,
.dark-mode .fixed-footer .social-icons a:hover,
.dark-mode .fixed-footer .footer-bottom a:hover {
  color: #a3b7f0 !important;
}
</style>

<!-- partials/footer.ejs -->
<footer class="fixed-footer">
  <div class="footer-content">
    <div class="footer-section about">
      <h3>About Us</h3>
      <p>Discover a world of books. Your one-stop destination for all your reading needs.</p>
    </div>
    
    <div class="footer-section links">
      <h3>Quick Links</h3>
      <ul>
        <li><a href="/books">Browse Books</a></li>
        <li><a href="/categories">Categories</a></li>
        <li><a href="/reviews">Reviews</a></li>
        <li><a href="/contact">Contact Us</a></li>
      </ul>
    </div>
    
    <div class="footer-section social">
      <h3>Follow Us</h3>
      <div class="social-icons">
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
