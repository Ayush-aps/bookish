<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<div class="container mt-4">
  <h2>Reviews</h2>
  <p class="text-muted">Scroll down to load more reviews...</p>

  <!-- Example: form to add a new (video) review -->
  <% if (currentUser) { %>
    <form action="/reviews" method="POST" class="mb-4">
      <div class="mb-3">
        <label>Book ID</label>
        <input type="text" name="bookId" class="form-control" placeholder="e.g. 101" required>
      </div>
      <div class="mb-3">
        <label>Your Video URL (optional)</label>
        <input type="text" name="videoUrl" class="form-control" placeholder="Direct .mp4 link" />
      </div>
      <div class="mb-3">
        <label>Your Text Review (optional if using video)</label>
        <textarea name="text" class="form-control" rows="2"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit Review</button>
    </form>
  <% } %>

  <div id="review-list" class="border p-3" style="min-height: 300px;">
    <!-- Reviews load here via JS (script.js) -->
  </div>

  <div id="loading" class="text-center my-3" style="display:none;">
    <div class="spinner-border" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
    <p>Loading more reviews...</p>
  </div>
</div>

<%- include('../partials/footer') %>
